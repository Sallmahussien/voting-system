generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String   @unique
  password   String
  nationalId String   @unique
  role       Role
  votes      Vote[]
}

model Topic {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      TopicStatus
  startDate   DateTime
  endDate     DateTime
  votesCount  Int      @default(0)
  options     Option[]
  votes       Vote[]
}


model Option {
  id         Int      @id @default(autoincrement())
  optionText String
  voteCount  Int      @default(0)
  topic      Topic    @relation(fields: [topicId], references: [id])
  topicId    Int
  votes      Vote[]
}

model Vote {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  topic    Topic  @relation(fields: [topicId], references: [id])
  topicId  Int
  option   Option @relation(fields: [optionId], references: [id])
  optionId Int
}

enum Role {
  USER
  ADMIN
}

enum TopicStatus {
  ACTIVE
  INACTIVE
  CANCELLED
}